@model GeocodeTest.Models.Address

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h2>Address Details</h2>

    <fieldset>
        <legend>Selected Address</legend>

        <div class="row">
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-4">@Html.LabelFor(model => model.Address1, "Address Line 1")</div>
                    <div class="col-lg-8">@Html.DisplayFor(model => model.Address1)</div>
                </div>

                <div class="row">
                    <div class="col-lg-4">@Html.LabelFor(model => model.Address2, "Address Line 2")</div>
                    <div class="col-lg-8">
                        @if (String.IsNullOrWhiteSpace(Model.Address2))
                        {
                            <dd class="display-field">
                                &mdash;
                            </dd>
                        }
                        else
                        {
                            <dd class="display-field">
                                @Model.Address2
                            </dd>
                        }
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-4">@Html.LabelFor(model => model.City)</div>
                    <div class="col-lg-8">@Html.DisplayFor(model => model.City)</div>
                </div>

                <div class="row">
                    <div class="col-lg-4">@Html.LabelFor(model => model.State)</div>
                    <div class="col-lg-8">@Html.DisplayFor(model => model.State)</div>
                </div>

                <div class="row">
                    <div class="col-lg-4">@Html.LabelFor(model => model.Zip)</div>
                    <div class="col-lg-8">@Html.DisplayFor(model => model.Zip)</div>
                </div>

                <div class="row">
                    <div class="col-lg-4">@Html.LabelFor(model => model.Latitude)</div>
                    <div class="col-lg-8">@Html.DisplayFor(model => model.Latitude)</div>
                </div>

                <div class="row">
                    <div class="col-lg-4">@Html.LabelFor(model => model.Longitude)</div>
                    <div class="col-lg-8">@Html.DisplayFor(model => model.Longitude)</div>
                </div>
            </div>

            <div class="col-lg-6">
                @{Html.RenderAction("Distance", "Distance", Model.Id);}
            </div>
        </div>
        
    </fieldset>

    <hr />

    <div class="row">
        <div class="col-lg-12">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>